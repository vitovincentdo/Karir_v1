<div class="container-fluid slice">
  <div class="container align-self-center">
    <div class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-2 control-label">Title</label>
            <div class="col-sm-10">
                {{input type="text" value=model.title class="form-control" placeholder="The name of the Library"}}
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Article</label>
            {{!-- <div class="col-sm-10">
                {{textarea value=model.article placeholder="Input your article here..." class="form-control" row="7"}}
            </div> --}}
            {{tinymce-editor options=ownOptions value=model.article}}
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default" {{action 'saveArticle'}}>Add to Article List</button>
            </div>
        </div>
    </div>

    {{#if responseMessage}}
     <div class="alert alert-success">{{responseMessage}}</div>
   {{/if}}

  </div>
</div>

{{outlet}}