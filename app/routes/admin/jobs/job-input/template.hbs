<div class="container-fluid slice">
  <div class="container align-self-center">
    <div class="form-horizontal">
        <br>
        <div class="form-group">
            <label class="col-sm-2 control-label">Job Name</label>
            <div class="col-sm-10">
                {{input type="text" value=Newname class="form-control" placeholder="Input Job Name..."}}
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Job Specialization</label>
            <div class="col-sm-10">
                {{input type="text" value=NewSpecial class="form-control" placeholder="Input Job Specialization..."}}
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Job Location</label>
            <div class="col-sm-10">
                {{input type="text" value=NewLocation class="form-control" placeholder="Input Job Location (i.e jakarta, surabaya,...)"}}
            </div>
        </div>
        {{!-- <div class="form-group">
            <label class="col-sm-2 control-label">Article</label>
            <div class="col-sm-10">
                {{textarea value=Newarticle placeholder="Input your article here..." class="form-control" row="7"}}
            </div>
        </div> --}}
        <div class="form-group">
            <label class="col-sm-6 control-label">Image-Job (Drag & Drop Here):</label>
            <div class="col-sm-6">
                {{!-- {{input type="file" id="fileInput" class="form-control" action="encodeImageFileAsURL"}} --}}
                {{tinymce-editor options=jobImageOptions value=newImgJob}}
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-6 control-label">Job Description:</label>
            <div class="col-sm-8">
            {{tinymce-editor options=ownOptions value=jobDescription}}
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-6 control-label">Job Qualification:</label>
            <div class="col-sm-8">
            {{tinymce-editor options=ownOptions value=jobQualification}}
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Job Featured</label>
            <div class="col-sm-10">
                {{!-- {{input type="text" value=model.name class="form-control" placeholder="The name of the Library"}} --}}
                {{!-- <input type="checkbox" checked={{model.Featured}} onchange={{action "valueHasChanged" value="target.checked"}}> --}}
                {{!-- {{model.featured}} --}}
                {{flagFeatured}}
                <input type="checkbox" onchange={{action "valueChanged" value="target.checked"}} checked={{flagFeatured}}>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default" {{action 'saveJob'}}>Add to Job List</button>
            </div>
        </div>
    </div>

    {{#if responseMessage}}
     <div class="alert alert-success">{{responseMessage}}</div>
   {{/if}}

  </div>
</div>

{{outlet}}