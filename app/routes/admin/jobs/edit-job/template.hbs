<div class="container-fluid slice">
  <div class="container align-self-center">
    <div class="form-horizontal">
        <br>
        <div class="form-group">
            <label class="col-sm-2 control-label">Job Name</label>
            <div class="col-sm-10">
                {{input type="text" value=model.name class="form-control" placeholder="The name of the Library"}}
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Job Featured</label>
            <div class="col-sm-10">
                {{!-- {{input type="text" value=model.name class="form-control" placeholder="The name of the Library"}} --}}
                {{!-- <input type="checkbox" checked={{model.Featured}} onchange={{action "valueHasChanged" value="target.checked"}}> --}}
                {{model.featured}}
                <input type="checkbox" checked={{model.featured}} onchange={{action "valueHasChanged" value="target.checked"}}>
            </div>
        </div>
        
        {{!-- <div class="form-group">
            <label class="col-sm-2 control-label">Article</label>
            <div class="col-sm-10">
                {{textarea value=Newarticle placeholder="Input your article here..." class="form-control" row="7"}}
            </div>
        </div> --}}
        <div class="form-group">
            <label class="col-sm-6 control-label">Image-Job (Drag & Drop Here):</label>
            <div class="col-sm-6">
                {{!-- {{input type="file" id="fileInput" class="form-control" action="encodeImageFileAsURL"}} --}}
                {{tinymce-editor options=jobImageOptions value=model.thumbJob}}
            </div>
        </div>
        <div class="form-group">
            {{tinymce-editor options=ownOptions value=model.description}}
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default" {{action 'saveJob' model}}>Add to Job List</button>
            </div>
        </div>
    </div>

    {{#if responseMessage}}
     <div class="alert alert-success">{{responseMessage}}</div>
   {{/if}}

  </div>
</div>

{{outlet}}